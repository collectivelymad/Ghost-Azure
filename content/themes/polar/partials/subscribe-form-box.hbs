{{#if @labs.subscribers}}
<div class="subscribe">
	<h3 class="subscribe-title align-center">{{t "Subscribe to {blogtitle}" blogtitle=@site.title}}</h3>
	<p class="align-center">{{t "Get the latest posts delivered right to your inbox."}}</p>
	{{subscribe_form
		form_class="sign-up-form"
		input_class="form-control"
		button_class="btn btn-primary"
		placeholder=(t "Enter your email...")
	}}
	<div class="subscribe-rss align-center">{{t "or subscribe via"}} <a href='{{@site.url}}/rss/'>{{t "RSS FEED"}}</a></div>
</div>
{{/if}}